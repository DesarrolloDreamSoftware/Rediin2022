@model ESapOrganizacionCompra

@{
    ViewData["Title"] = "Captura";
    EVSapOrganizacionesCompra EV = ViewBag.EV;
}

<form asp-action="_SapOrganizacionCompraCaptura">
    <div mpanel="Edit" xpnl-messages="@ViewBag.Mensajes" xpnl-rules="@EV.SapOrganizacionCompra.Reglas" 
        xpnl-readonly="@EV.Accion == MAccionesGen.Consulta">
        <div msub-panel="CapTitulo">
            @MensajesXId._SapOrganizacionCompraTitCap
        </div>
        <div msub-panel="CapDatos">
            <div melemento="CapLin">
                <div melemento="CapCol" melem-cols="6">
                    <input mval="Model" xval-for="SapOrganizacionCompraId" mval-accion="@EV.Accion"/>
                </div>
                <div melemento="CapCol" melem-cols="6">
                    <input mval="Model" xval-for="Activo"/>
                </div>
            </div>
            <div melemento="CapLin">
                <div melemento="CapCol" melem-cols="12">
                    <input mval="Model" xval-for="SapOrganizacionCompraNombre"/>
                </div>
            </div>
        </div>
        <div msub-panel="CapAccionesGen">
            <button maccion="Guarda"
                    asp-action="@(EV.Accion == MAccionesGen.Inserta ? nameof(SapOrganizacionesCompraController.SapOrganizacionCompraInserta) : nameof(SapOrganizacionesCompraController.SapOrganizacionCompraActualiza))"
                    xvalidate="@nameof(ESapOrganizacionCompra)"></button>
            &nbsp;
            <a maccion="Regresa" asp-action="@nameof(SapOrganizacionesCompraController.SapOrganizacionCompraCon)"></a>
            &nbsp;
            <div mauditoriacb="@Model"></div>
        </div>
    </div>
</form>
