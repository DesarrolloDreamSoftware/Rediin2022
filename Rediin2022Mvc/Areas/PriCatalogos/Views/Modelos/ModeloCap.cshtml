@model EModelo

@{
    ViewData["Title"] = "Captura";
    EVModelos EV = ViewBag.EV;
}

<form asp-action="_ModeloCaptura">
    <div mpanel="Edit" xpnl-messages="@ViewBag.Mensajes" xpnl-rules="@EV.Modelo.Reglas"
         xpnl-readonly="@EV.Accion == MAccionesGen.Consulta">
        <div msub-panel="CapTitulo">
            @MensajesXId._ModeloTitCap
        </div>
        <div msub-panel="CapDatos">
            <div melemento="CapLin">
                <div melemento="CapCol" melem-cols="6">
                    <input mval="Model" xval-for="ModeloId" xval-enabled="false"/>
                </div>
                <div melemento="CapCol" melem-cols="6">
                    <input mval="Model" xval-for="Activo"/>
                </div>
            </div>
            <div melemento="CapLin">
                <div melemento="CapCol" melem-cols="6">
                    <select mval="Model" xval-for="TipoCapturaId"></select>
                </div>
                <div melemento="CapCol" melem-cols="6">
                </div>
            </div>
            <div melemento="CapLin">
                <div melemento="CapCol" melem-cols="12">
                    <input mval="Model" xval-for="ModeloNombre"/>
                </div>
            </div>
        </div>
        <div msub-panel="CapAccionesGen">
            <button maccion="Guarda"
                    asp-action="@(EV.Accion == MAccionesGen.Inserta ? nameof(ModelosController.ModeloInserta) : nameof(ModelosController.ModeloActualiza))"
                    xvalidate="@nameof(EModelo)"></button>
            &nbsp;
            <a maccion="Regresa" asp-action="@nameof(ModelosController.ModeloCon)"></a>
            &nbsp;
            <div mauditoriacb="@Model"></div>
        </div>
    </div>
</form>
