@model ERegimenFiscal

@{
    ViewData["Title"] = "Captura";
    EVRegimenesFiscales EV = ViewBag.EV;
}

<form asp-action="_RegimenFiscalCaptura">
    <div mpanel="Edit" xpnl-messages="@ViewBag.Mensajes" xpnl-rules="@EV.RegimenFiscal.Reglas"
         xpnl-readonly="@EV.Accion == MAccionesGen.Consulta">
        <div msub-panel="CapTitulo">
            @MensajesXId._RegimenFiscalTitCap
        </div>
        <div msub-panel="CapDatos">
            <div melemento="CapLin">
                <div melemento="CapCol" melem-cols="6">
                    <input mval="Model" xval-for="RegimenFiscaId" xval-enabled="false"/>
                </div>
                <div melemento="CapCol" melem-cols="6">
                    <input mval="Model" xval-for="Activo"/>
                </div>
            </div>
            <div melemento="CapLin">
                <div melemento="CapCol" melem-cols="6">
                    <input mval="Model" xval-for="RegimenFiscalClave"/>
                </div>
                <div melemento="CapCol" melem-cols="6">
                </div>
            </div>
            <div melemento="CapLin">
                <div melemento="CapCol" melem-cols="12">
                    <input mval="Model" xval-for="RegimenFiscalNombre"/>
                </div>
            </div>
        </div>
        <div msub-panel="CapAccionesGen">
            <button maccion="Guarda"
                    asp-action="@(EV.Accion == MAccionesGen.Inserta ? nameof(RegimenesFiscalesController.RegimenFiscalInserta) : nameof(RegimenesFiscalesController.RegimenFiscalActualiza))"
                    xvalidate="@nameof(ERegimenFiscal)"></button>
            &nbsp;
            <a maccion="Regresa" asp-action="@nameof(RegimenesFiscalesController.RegimenFiscalCon)"></a>
            &nbsp;
            <div mauditoriacb="@Model"></div>
        </div>
    </div>
</form>
