@model EIncoterm

@{
    ViewData["Title"] = "Captura";
    EVIncoterms EV = ViewBag.EV;
}

<form asp-action="_IncotermCaptura">
    <div mpanel="Edit" xpnl-messages="@ViewBag.Mensajes" xpnl-rules="@EV.Incoterm.Reglas"
         xpnl-readonly="@EV.Accion == MAccionesGen.Consulta">
        <div msub-panel="CapTitulo">
            @MensajesXId._IncotermTitCap
        </div>
        <div msub-panel="CapDatos">
            <div melemento="CapLin">
                <div melemento="CapCol" melem-cols="6">
                    <input mval="Model" xval-for="IncotermId" xval-enabled="false"/>
                </div>
                <div melemento="CapCol" melem-cols="6">
                    <input mval="Model" xval-for="Activo"/>
                </div>
            </div>
            <div melemento="CapLin">
                <div melemento="CapCol" melem-cols="6">
                    <input mval="Model" xval-for="IncotermClave"/>
                </div>
                <div melemento="CapCol" melem-cols="6">
                </div>
            </div>
            <div melemento="CapLin">
                <div melemento="CapCol" melem-cols="12">
                    <input mval="Model" xval-for="IncotermNombre"/>
                </div>
            </div>
        </div>
        <div msub-panel="CapAccionesGen">
            <button maccion="Guarda"
                    asp-action="@(EV.Accion == MAccionesGen.Inserta ? nameof(IncotermsController.IncotermInserta) : nameof(IncotermsController.IncotermActualiza))"
                    xvalidate="@nameof(EIncoterm)"></button>
            &nbsp;
            <a maccion="Regresa" asp-action="@nameof(IncotermsController.IncotermCon)"></a>
            &nbsp;
            <div mauditoriacb="@Model"></div>
        </div>
    </div>
</form>
