@model ESapGrupoCuenta

@{
    ViewData["Title"] = "Captura";
    EVSapGrupoCuentas EV = ViewBag.EV;
}

<form asp-action="_SapGrupoCuentaCaptura">
    <div mpanel="Edit" xpnl-messages="@ViewBag.Mensajes" xpnl-rules="@EV.SapGrupoCuenta.Reglas" 
        xpnl-readonly="@EV.Accion == MAccionesGen.Consulta">
        <div msub-panel="CapTitulo">
            @MensajesXId._SapGrupoCuentaTitCap
        </div>
        <div msub-panel="CapDatos">
            <div melemento="CapLin">
                <div melemento="CapCol" melem-cols="6">
                    <input mval="Model" xval-for="SapGrupoCuentaId" mval-accion="@EV.Accion"/>
                </div>
                <div melemento="CapCol" melem-cols="6">
                    <input mval="Model" xval-for="Activo"/>
                </div>
            </div>
            <div melemento="CapLin">
                <div melemento="CapCol" melem-cols="12">
                    <input mval="Model" xval-for="SapGrupoCuentaNombre"/>
                </div>
            </div>
        </div>
        <div msub-panel="CapAccionesGen">
            <button maccion="Guarda"
                    asp-action="@(EV.Accion == MAccionesGen.Inserta ? nameof(SapGrupoCuentasController.SapGrupoCuentaInserta) : nameof(SapGrupoCuentasController.SapGrupoCuentaActualiza))"
                    xvalidate="@nameof(ESapGrupoCuenta)"></button>
            &nbsp;
            <a maccion="Regresa" asp-action="@nameof(SapGrupoCuentasController.SapGrupoCuentaCon)"></a>
            &nbsp;
            <div mauditoriacb="@Model"></div>
        </div>
    </div>
</form>
