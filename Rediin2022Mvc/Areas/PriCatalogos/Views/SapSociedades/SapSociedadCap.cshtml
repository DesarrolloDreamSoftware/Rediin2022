@model ESapSociedad

@{
    ViewData["Title"] = "Captura";
    EVSapSociedades EV = ViewBag.EV;
}

<form asp-action="_SapSociedadCaptura">
    <div mpanel="Edit" xpnl-messages="@ViewBag.Mensajes" xpnl-rules="@EV.SapSociedad.Reglas" 
        xpnl-readonly="@EV.Accion == MAccionesGen.Consulta">
        <div msub-panel="CapTitulo">
            @MensajesXId._SapSociedadTitCap
        </div>
        <div msub-panel="CapDatos">
            <div melemento="CapLin">
                <div melemento="CapCol" melem-cols="6">
                    <input mval="Model" xval-for="SapSociedadId" mval-accion="@EV.Accion"/>
                </div>
                <div melemento="CapCol" melem-cols="6">
                    <input mval="Model" xval-for="Activo"/>
                </div>
            </div>
            <div melemento="CapLin">
                <div melemento="CapCol" melem-cols="12">
                    <input mval="Model" xval-for="SapSociedadNombre"/>
                </div>
            </div>
        </div>
        <div msub-panel="CapAccionesGen">
            <button maccion="Guarda"
                    asp-action="@(EV.Accion == MAccionesGen.Inserta ? nameof(SapSociedadesController.SapSociedadInserta) : nameof(SapSociedadesController.SapSociedadActualiza))"
                    xvalidate="@nameof(ESapSociedad)"></button>
            &nbsp;
            <a maccion="Regresa" asp-action="@nameof(SapSociedadesController.SapSociedadCon)"></a>
            &nbsp;
            <div mauditoriacb="@Model"></div>
        </div>
    </div>
</form>
