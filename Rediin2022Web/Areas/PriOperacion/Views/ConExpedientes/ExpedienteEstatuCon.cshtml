@model List<EExpedienteEstatu>
@{
    ViewData["Title"] = "Consulta";
}
<div mpanel="Display" mpnl-mensajes="@ViewBag.Mensajes" xpnl-rules="ViewBag.Reglas">
    <div msub-panel="ConTitulo" msp-filtros="false">
        @MensajesXId._ExpedienteEstatuTitCon
    </div>
    <div msub-panel="ConDatos">
        <table melemento="ConTabla" xsort-action="@nameof(ConExpedientesController.ExpedienteEstatuOrdena)" xsort-current="@ViewBag.orden">
            <thead melemento="ConTablaEnc">
                <tr>
                    <th></th>
                    <th>
                        <span mhead-for="@nameof(EExpedienteEstatu.FechaCreacion)" xhead-sort="true"></span>
                    </th>
                    <th>
                        <span mhead-for="@nameof(EExpedienteEstatu.EstatusNombre)" xhead-sort="true"></span>
                    </th>
                    <th>
                        <span mhead-for="@nameof(EExpedienteEstatu.Nombre)" xhead-sort="true"></span>
                    </th>
                    <th>
                        <span mhead-for="@nameof(EExpedienteEstatu.ApellidoPaterno)" xhead-sort="true"></span>
                    </th>
                    <th>
                        <span mhead-for="@nameof(EExpedienteEstatu.ApellidoMaterno)" xhead-sort="true"></span>
                    </th>
                    <th>
                        <span mhead-for="@nameof(EExpedienteEstatu.Comentarios)"></span>
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    for (int i = 0; i < Model.Count(); i++)
                    {
                        String vDivAcciones = "divPanelAcciones" + i.ToString();
                        <tr class="@(ViewBag.Indice == i ? "conTablaLinSel" : null)">
                            <td nowrap>
                                <a maccion="ConsultaXId" asp-action="@nameof(ConExpedientesController.ExpedienteEstatuXId)" asp-route-indice="@i"></a>

                                @*<div msub-panel="ConAccionesXReg" id="@vDivAcciones">
                                    <a maccion="ConsultaXIdList" asp-action="@nameof(ConExpedientesController.ExpedienteEstatuXId)" asp-route-indice="@i"></a>
                                </div>*@
                            </td>
                            <td>
                                <span mcell-for="@Model[i].FechaCreacion" xcell-format="dd/MM/yyyy HH:mm"></span>
                            </td>
                            <td>
                                <span mcell-for="@Model[i].EstatusNombre"></span>
                            </td>
                            <td>
                                <span mcell-for="@Model[i].Nombre"></span>
                            </td>
                            <td>
                                <span mcell-for="@Model[i].ApellidoPaterno"></span>
                            </td>
                            <td>
                                <span mcell-for="@Model[i].ApellidoMaterno"></span>
                            </td>
                            <td>
                                <span mcell-for="@Model[i].Comentarios" xcell-first="30"></span>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div msub-panel="ConPaginador">
        <div mdata-pager="@ViewBag.DatPag" xdp-action="@nameof(ConExpedientesController.ExpedienteEstatuPaginacion)"></div>
    </div>
    <div msub-panel="ConAccionesGen">
        <a maccion="Regresa" asp-action="@nameof(ConExpedientesController.ConExpedienteInicia)" asp-route-indice="-1"></a>
    </div>
</div>
